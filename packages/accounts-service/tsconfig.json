{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@test-utils/*": ["src/__tests__/test-utils/*"],
      "@factories": ["src/__factories__"],
      "@factories/*": ["src/__factories__/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@gql/*": ["src/graphql/*"],
      "@gql-types/*": ["src/graphql/types/*"],
      "@gql-queries": ["src/graphql/queries"],
      "@gql-queries/*": ["src/graphql/queries/*"],
      "@gql-mutations": ["src/graphql/mutations"],
      "@gql-mutations/*": ["src/graphql/mutations/*"],
      "@gql-resolvers": ["src/graphql/resolvers"],
      "@gql-resolvers/*": ["src/graphql/resolvers/*"],
      "@gql-mappers": ["src/graphql/mappers"],
      "@gql-mappers/*": ["src/graphql/mappers/*"],
      "@gql-utils": ["./src/graphql/utils"],
      "@gql-utils/*": ["./src/graphql/utils/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}